{
  "extends": [
    "eslint:recommended"
  ],

  "globals": {
    "PhaserInput": true,
    "Phaser": true,
    "expect": true
  },
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "backtick"],
    "semi": ["error", "always"],
    "prefer-const": "error",
    "no-console": "warn"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  }
}
